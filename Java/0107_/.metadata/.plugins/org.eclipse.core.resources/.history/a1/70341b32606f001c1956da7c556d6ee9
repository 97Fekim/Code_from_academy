package class_learning;

public class Car_main 
{
	public static void main(String[] args) 
	{
		Car car = new Car();	// 생성자, 클래스 이름과 동일한 함수
		
		Car car1 = new Car(5,5,"a","b"); // car와 car 객체는 서로 다른 메모리 공간에 위치해 있다.
		Car car2 = new Car(50,50,"aa", "bb");
		Car car3 = new Car(500,500,"aaa", "bbb");
		Car car4 = new Car(5000,5000,"aaaa", "bbbb");
		Car car5 = new Car(50000,50000,"aaaaa", "bbbbb");
		
		/* 객체 배열 */
		Car[] cars = new Car[5];
		cars[0] = car1;
		cars[1] = car2;
		cars[2] = car3;
		cars[3] = car4;
		cars[4] = car5;
		
		int len = cars.length;
		for(int i = 0; i < len; ++i)
		{
			System.out.println("------car"+(i+1)+"------");
			System.out.println(cars[i].color);
			System.out.println(cars[i].name);
			System.out.println(cars[i].doorNumber);
			System.out.println(cars[i].windowNumber);
		}
		
		System.out.println("-------------------------");
		System.out.println(car.color);
		System.out.println(car1.color);
		System.out.println(car.getColor());
		System.out.println(car1.getColor());
		
		car.setColor("하늘색");
		car.setName("부가티");
		car.setDoorNumber(2);
		car.setWindowNumber(4);
		System.out.println(car.getColor());
		System.out.println(car.getName());
		System.out.println(car.getDoorNumber());
		System.out.println(car.getWindowNumber());
		

		
		
	}
}
